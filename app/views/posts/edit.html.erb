<h1>Edit Post</h1>
<ul>
  <% @post.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
  <% end %>
</ul>
<%= form_for @post, url: update_post_path, method: :patch do |f| %>
  <%= f.text_field :title %>
  <br/>
  <%= f.text_area :content %>
  <br/>
  <%= f.submit %>
<% end %>
<%= link_to 'Back to Home', root_path %>